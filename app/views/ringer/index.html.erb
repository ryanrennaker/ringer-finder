      <% ringerlink="/show/?id=" + ringer["id"].to_s %>
      <h5><a href=<%=ringerlink%>><%=ringer["ringer_name"]%></a></h5>
    </div>
    <div class="col-xs-6 col-sm-3">
      <h5><%=ringer["sports"].join(", ") %></h5>
    </div>
    <div class="col-xs-6 col-sm-3">
      <h5><%=ringer["comp_level"]%></h5>
    </div>
    <div class="col-xs-6 col-sm-3">
      <h5><%=ringer["city"]%></h5>
    </div>
  </div>

<% end %>


