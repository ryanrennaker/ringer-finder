<div class="page-header">
  <h1>Pick Up Ringers</h1>
</div>

<div class="row" style="background-color: #F8F8F8;">
  <div class="col-xs-6 col-sm-1"></div>
  <div class="col-xs-6 col-sm-2"><h3>Name</h3></div>
  <div class="col-xs-6 col-sm-2"><h3>City</h3></div>
  <div class="col-xs-6 col-sm-3"><h3>Sports</h3></div>
  <div class="col-xs-6 col-sm-3"><h3>Competition Level</h3></div>
  </small>
</div>

<% @ringer_sport_pairs.each do |ringersportpair| %>
  <div class="row">
    <div class="col-xs-6 col-sm-1"><a href="/ringers/<%= ringersportpair[:ringer].id.to_s %>/show"><img width="60" src=<%= ringersportpair[:ringer][:img_url]%>></a></div>
    <div class="col-xs-6 col-sm-2">
      <% ringerlink="ringers/" + ringersportpair[:ringer].id.to_s + "/show" %>
      <h4><a href=<%=ringerlink%>><%=ringersportpair[:ringer][:first]%> <%=ringersportpair[:ringer][:last]%></a></h4>
    </div>
    <div class="col-xs-6 col-sm-2">
      <h4><%=ringersportpair[:ringer][:city]%>, <%=ringersportpair[:ringer][:state]%></h4>
    </div>
    <div class="col-xs-6 col-sm-3">
      <h4><%=ringersportpair[:sports].join(", ") %></h4>
    </div>
    <div class="col-xs-6 col-sm-3">
      <h4><%=ringersportpair[:ringer][:comp_level]%></h4>
    </div>
  </div>

<% end %>

